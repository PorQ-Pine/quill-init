import { ProgressBar } from "../../ui-common/progressbar.slint";

export component AppWindow inherits Window {
    default-font-family: "U001";
    default-font-size: 80px;

    in-out property<float> boot_progress: 0;

    VerticalLayout {
        Rectangle {}

        HorizontalLayout {
            Rectangle {}
            Image {
                source: @image-url("../../branding/quillos.svg");
                width: 45%;
                height: 45%;
            }
            Rectangle {}
        }

        HorizontalLayout {
            Rectangle {}
            ProgressBar {
                progress: root.boot_progress;
                width: 37.5%;
                height: 2%;
            }
            Rectangle {}
        }

        Rectangle {}
    }
}
